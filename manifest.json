{
  "manifest_version": 2,

  "name": "Sumedium",
  "description": "Summarize Turkish Medium Pages on the go!",
  "version": "1.0",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "background": {
    "scripts": ["jquery-3.4.1.min.js", "eventPage.js"],
    "persistent": false
  },

  "permissions": [  
          "tabs",      
          "contextMenus",
          "https://medium.com/turkce/*"
  ],
  "browser_action": {
    "default_title": "Make this Turkish Medium page summarized"
  }
}